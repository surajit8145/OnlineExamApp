<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✏️ Update Exam"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_marginBottom="16dp"/>

        <!-- Exam Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter the exam title (e.g., Unit Test 1)"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/etExamTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Exam Title"
            android:inputType="text"
            android:padding="14dp"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:background="@drawable/input_bg"
            android:layout_marginBottom="14dp"/>

        <!-- Subject -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter the subject name (e.g., Mathematics)"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/etExamSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Subject"
            android:inputType="text"
            android:padding="14dp"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:background="@drawable/input_bg"
            android:layout_marginBottom="14dp"/>

        <!-- Exam Date -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tap to select exam date"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/etExamDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Exam Date (YYYY-MM-DD)"
            android:focusable="false"
            android:clickable="true"
            android:drawableEnd="@drawable/ic_calendar"
            android:padding="14dp"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:background="@drawable/input_bg"
            android:layout_marginBottom="14dp"/>

        <!-- Exam Time -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tap to select exam start time"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/etExamTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select Time"
            android:focusable="false"
            android:clickable="true"
            android:drawableEnd="@drawable/ic_clock"
            android:padding="14dp"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:background="@drawable/input_bg"
            android:layout_marginBottom="14dp"/>

        <!-- Duration -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter duration in minutes (e.g., 90)"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/etExamDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Duration (Minutes)"
            android:inputType="number"
            android:padding="14dp"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:background="@drawable/input_bg"
            android:layout_marginBottom="20dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUpdateExam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="✅ Update Exam"
            android:textSize="16sp"
            android:paddingVertical="14dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:layout_marginBottom="12dp"
            app:cornerRadius="8dp" /> <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDeleteExam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🗑️ Delete Exam"
        android:textSize="16sp"
        android:paddingVertical="14dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:cornerRadius="8dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        app:strokeColor="?attr/colorError"
        android:textColor="?attr/colorError"
        app:iconTint="?attr/colorError"
        /> </LinearLayout>

</ScrollView>
