<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“ Add New Question"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:gravity="center"
            android:paddingBottom="12dp" />

        <!-- Instructions -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/surface"
            android:elevation="4dp"
            android:padding="12dp"
            app:cardCornerRadius="12dp">

            <TextView
                android:id="@+id/tvInstructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ”” Instructions:\nâ€¢ Select the exam to which the question belongs.\nâ€¢ Enter the question and all four options.\nâ€¢ Choose the correct answer from the dropdown.\nâ€¢ Click 'Save Question' to submit."
                android:textSize="14sp"
                android:textColor="@color/text_secondary" />
        </androidx.cardview.widget.CardView>

        <!-- Exam Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Exam"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:paddingBottom="4dp" />

        <Spinner
            android:id="@+id/spinnerExam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@drawable/spinner_background"
            android:layout_marginBottom="12dp" />

        <!-- Question Input -->
        <EditText
            android:id="@+id/etQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Question"
            android:padding="12dp"
            android:textColor="@color/text_primary"
            android:background="@drawable/edittext_background"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"
            android:layout_marginBottom="12dp" />

        <!-- Option Inputs -->
        <EditText
            android:id="@+id/etOption1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Option A"
            android:padding="12dp"
            android:textColor="@color/text_primary"
            android:background="@drawable/edittext_background"
            android:inputType="text"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etOption2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Option B"
            android:padding="12dp"
            android:textColor="@color/text_primary"
            android:background="@drawable/edittext_background"
            android:inputType="text"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etOption3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Option C"
            android:padding="12dp"
            android:textColor="@color/text_primary"
            android:background="@drawable/edittext_background"
            android:inputType="text"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etOption4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Option D"
            android:padding="12dp"
            android:textColor="@color/text_primary"
            android:background="@drawable/edittext_background"
            android:inputType="text"
            android:layout_marginBottom="12dp" />

        <!-- Correct Answer -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Correct Answer"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:paddingBottom="4dp" />

        <Spinner
            android:id="@+id/spinnerCorrectAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSaveQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âœ… Save Question"
            android:textColor="@color/white"
            android:backgroundTint="@color/button_primary"
            android:padding="14dp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>
