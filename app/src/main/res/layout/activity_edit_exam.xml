<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    android:background="@color/background">

    <!-- Exam Title -->
    <EditText
        android:id="@+id/etExamTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Exam Title"
        android:inputType="text"
        android:padding="14dp"
        android:textSize="16sp"
        android:textColor="@color/text_primary"
        android:background="@drawable/input_bg"
        android:layout_marginBottom="14dp"/>

    <!-- Subject -->
    <EditText
        android:id="@+id/etExamSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Subject"
        android:inputType="text"
        android:padding="14dp"
        android:textSize="16sp"
        android:textColor="@color/text_primary"
        android:background="@drawable/input_bg"
        android:layout_marginBottom="14dp"/>

    <!-- Exam Date (With Clickable Date Picker) -->
    <EditText
        android:id="@+id/etExamDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Exam Date (YYYY-MM-DD)"
        android:focusable="false"
        android:clickable="true"
        android:padding="14dp"
        android:textSize="16sp"
        android:textColor="@color/text_primary"
        android:background="@drawable/input_bg"
        android:layout_marginBottom="14dp"/>

    <EditText
        android:id="@+id/etExamTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Time"
        android:focusable="false"
        android:clickable="true"
        android:padding="14dp"
        android:textSize="16sp"
        android:textColor="@color/text_primary"
        android:background="@drawable/input_bg"
        android:layout_marginBottom="14dp"/>


    <!-- Exam Duration -->
    <EditText
        android:id="@+id/etExamDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Duration (Minutes)"
        android:inputType="number"
        android:padding="14dp"
        android:textSize="16sp"
        android:textColor="@color/text_primary"
        android:background="@drawable/input_bg"
        android:layout_marginBottom="20dp"/>

    <!-- Update Exam Button -->
    <Button
        android:id="@+id/btnUpdateExam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Exam"
        android:backgroundTint="@color/button_primary"
        android:textColor="@color/white"
        android:padding="14dp"
        android:textSize="16sp"
        android:background="@drawable/rounded_button"
        android:layout_marginBottom="14dp"/>

    <!-- Delete Exam Button -->
    <Button
        android:id="@+id/btnDeleteExam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Exam"
        android:backgroundTint="@color/error"
        android:textColor="@color/white"
        android:padding="14dp"
        android:textSize="16sp"
        android:background="@drawable/rounded_button"/>
</LinearLayout>
