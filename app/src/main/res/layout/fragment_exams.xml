                android:layout_height="wrap_content"
                android:text="ðŸ“š Your Exam Dashboard ðŸ“Š"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvPageDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ‘‹ Browse through your scheduled, ongoing, and completed exams below."
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/darker_gray"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <TextView
                android:id="@+id/tvRunningExamsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸš€ Running Exams"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvRunningExamsDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”¥ These exams are currently active. Tap to view instructions and start the exam."
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/darker_gray"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRunningExams"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                tools:listitem="@layout/item_exam" />

            <TextView
                android:id="@+id/tvUpcomingExamsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â° Upcoming Exams"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvUpcomingExamsDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“… Exams that are scheduled to start soon. Use this time to prepare thoroughly!"
