<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:elevation="4dp"
    android:layout_margin="8dp">

    <!-- View Mode -->
    <TextView
        android:id="@+id/tvQuestionNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Q1: "
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvQuestionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question Text"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/text_primary" />

    <TextView
        android:id="@+id/tvOption1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. Option 1"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tvOption2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. Option 2"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tvOption3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3. Option 3"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tvOption4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4. Option 4"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tvCorrectAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="âœ” Correct: Option"
        android:textColor="#4CAF50"
        android:textSize="16sp" />

    <!-- Edit Mode -->
    <LinearLayout
        android:id="@+id/editLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="12dp">

        <EditText
            android:id="@+id/etQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Edit Question"
            android:inputType="textMultiLine"
            android:layout_marginBottom="5dp"
            android:padding="12dp"
            android:scrollHorizontally="true"
            android:importantForAccessibility="yes"
            android:contentDescription="Enter the question text"
            android:gravity="start|top"
            android:maxLines="5"
            android:scrollbars="vertical" />

        <EditText
            android:id="@+id/etOption1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Edit Option 1"
            android:inputType="textMultiLine"
            android:layout_marginBottom="6dp"
            android:padding="12dp"
            android:scrollHorizontally="true"
        android:importantForAccessibility="yes"
        android:contentDescription="Enter option 1"
        android:gravity="start|top"
        android:maxLines="3"
        android:scrollbars="vertical" />

        <EditText
            android:id="@+id/etOption2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Edit Option 2"
            android:inputType="textMultiLine"
            android:layout_marginBottom="6dp"
            android:padding="12dp"
            android:scrollHorizontally="true"
            android:importantForAccessibility="yes"
            android:contentDescription="Enter option 2"
            android:gravity="start|top"
            android:maxLines="3"
            android:scrollbars="vertical" />

        <EditText
            android:id="@+id/etOption3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Edit Option 3"
            android:inputType="textMultiLine"
            android:layout_marginBottom="6dp"
            android:padding="12dp"
            android:scrollHorizontally="true"
            android:importantForAccessibility="yes"
            android:contentDescription="Enter option 3"
            android:gravity="start|top"
            android:maxLines="3"
            android:scrollbars="vertical" />

        <EditText
            android:id="@+id/etOption4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Edit Option 4"
            android:inputType="textMultiLine"
            android:layout_marginBottom="6dp"
            android:padding="12dp"
            android:scrollHorizontally="true"
            android:importantForAccessibility="yes"
            android:contentDescription="Enter option 4"
            android:gravity="start|top"
            android:maxLines="3"
            android:scrollbars="vertical" />

        <Spinner
            android:id="@+id/spinnerCorrectAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:padding="8dp"
            android:importantForAccessibility="yes"
            android:contentDescription="Select the correct answer for the question"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:weightSum="2">

            <Button
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="Save"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="Delete"
                android:backgroundTint="#F44336"
                android:textColor="#FFFFFF" />
        </LinearLayout>



    </LinearLayout>
</LinearLayout>
