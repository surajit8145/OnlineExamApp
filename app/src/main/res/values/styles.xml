<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.MaterialComponents.Button.ContainedButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:elevation">4dp</item>
        <item name="shapeAppearance">@style/RoundedButton</item>
    </style>

    <!-- Define Shape Style -->
    <style name="RoundedButton" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">8dp</item>
    </style>


</resources>